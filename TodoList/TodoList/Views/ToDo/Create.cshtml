@model TodoList.Models.ToDoItem

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Todo</title>
    <link rel="stylesheet" href="~/css/create.css" asp-append-version="true" />
</head>
<body>
    <div class="todo-form-container">
        <h2>Create New Todo</h2>

        <form asp-action="Create" method="post">
            <label asp-for="Title">Title</label>
            <input type="text" asp-for="Title" required class="form-control mb-3" />

            <label asp-for="IsCompleted">Is Completed</label>
            <input type="checkbox" asp-for="IsCompleted" class="form-check-input mb-3" />

            <button type="submit" class="btn btn-primary w-100">Add Todo</button>
        </form>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
